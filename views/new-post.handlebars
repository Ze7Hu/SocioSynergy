<!-- new-post.handlebars -->
<div class="container" align="center">
    <div class="row">
        <div class="custom-block col-sm-4 mx-auto">
            <div class="card-body d-flex flex-column align-items-center mt-4">
                <div class="p-2">
                    <img src="/img/SS-logo.png" height="50px" width="80px" alt="logo">
                </div>
                <!-- Divider-->
                <hr class="my-4" />
            </div>

            <form class="text-center new-post-form">
                <h3 class="card-header">Create New Post</h3>
                <br>
                <div class="mb-3">
                        <input type="text" id="post-title" name="post-title" class="form-control" placeholder="Title"/>
                    </div>

                <div class="mb-3">
                    <textarea class="form-control" name="content" id="content" placeholder="Write your post here"></textarea>
                </div>
                <div class="pt-3 mb-3">
                    <button class="btn button_slide slide_right" type="submit">Post</button>
                </div>
            </form>

            <hr class="my-4" />
            <p class="text-muted">Return to <a class="login-link" href="/profile">Profile</a></p>
        </div>
    </div>
</div>

<script src="/js/add-post.js"></script>
